<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/linear_dic"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DicActivity">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:scrollbars="vertical"
        android:scrollbarThumbHorizontal="@drawable/fastscroll_thumb"
        android:scrollbarThumbVertical="@drawable/fastscroll_thumb"
        android:scrollbarTrackHorizontal="@drawable/fastscroll_track"
        android:scrollbarTrackVertical="@drawable/fastscroll_track"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


</LinearLayout>